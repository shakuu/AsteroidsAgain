body-bg = url('../imgs/bg.jpg')

body
    overflow hidden
    background-image: body-bg
    color white
    font-family: Verdana, Geneva, Tahoma, sans-serif

    #game  
        margin auto

        .kineticjs-content
            margin auto

        .start-menu
            position fixed
            display block
            width 160px
            height: 160px
            text-align: center
            font-size: 24px

            .button
                display: block
                padding 5px 10px
                width 100%

            .hovered
                background-color: rgba(255, 255, 255, 0.05)
                text-shadow: 0px 0px 50px yellowgreen
    
    .inactive-background
        position: fixed
        left 0
        top 0
        width 100%
        height: 100%
        z-index: 100
        background-color: rgba(154, 205, 50, 0.15)

        .high-score-list
            z-index: 200
            margin auto
            width 50%
            height: 100%
            background-color: #333333
            color yellowgreen
            font-size: 24px